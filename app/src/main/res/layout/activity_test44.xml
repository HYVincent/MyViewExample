<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.vincent.myviewexample.view.MyErrorView
        android:layout_margin="20dp"
        android:paddingLeft="4dp"
        android:id="@+id/my_error_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.vincent.myviewexample.view.MyText
        android:id="@+id/myTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.vincent.myviewexample.view.CountDownTextView
        android:id="@+id/count_down_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>